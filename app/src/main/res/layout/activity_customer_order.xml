<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:padding="10dp"
    tools:context=".Activities.CustomerOrderActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:scrollbars="vertical"
            tools:ignore="MissingConstraints">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="cursive"
                android:gravity="center"
                android:padding="10dp"
                android:text="Find Delivery Guy"
                android:textColor="@color/fuel_orange"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/textEmail1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_mail"
                android:gravity="center"
                android:hint="Email"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:inputType="textEmailAddress"
                android:padding="20dp"/>

            <EditText
                android:id="@+id/textNumber1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_phone"
                android:gravity="center"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="20dp" />

            <EditText
                android:id="@+id/textFirstName1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:inputType="textPersonName"
                android:hint="Name"
                android:gravity="center"
                android:padding="20dp"
                android:drawableStart="@drawable/ic_name"
                />
            <EditText
                android:id="@+id/textLastName1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:inputType="textPersonName"
                android:hint="Surname"
                android:gravity="center"
                android:padding="20dp"
                android:drawableStart="@drawable/ic_name"
                />
            <EditText
                android:id="@+id/textProduct1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:inputType="textPersonName"
                android:hint="Products"
                android:gravity="center"
                android:padding="20dp"
                android:drawableStart="@drawable/baseline_shopping_basket_24"
                />
            <EditText
                android:id="@+id/textFrom1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:inputType="textPersonName"
                android:hint="From"
                android:gravity="center"
                android:padding="20dp"
                android:drawableStart="@drawable/baseline_location_on_24"
                />
            <EditText
                android:id="@+id/textTo1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:inputType="textPersonName"
                android:hint="Destination"
                android:gravity="center"
                android:padding="20dp"
                android:drawableStart="@drawable/ic_baseline_add_location_24"
                />

            <EditText
                android:id="@+id/textDateTime1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:drawableStart="@drawable/baseline_access_time_24"
                android:gravity="center"
                android:hint="Time"
                android:inputType="textEmailAddress"
                android:padding="20dp" />
            <!-- New Updates -->

            <EditText
                android:id="@+id/textShopName1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:inputType="textPersonName"
                android:hint="Shop Name"
                android:gravity="center"
                android:padding="20dp"
                android:drawableStart="@drawable/baseline_shopping_basket_24"
                />

            <EditText
                android:id="@+id/textPayMethod1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:inputType="textPersonName"
                android:hint="Method Of Payment"
                android:gravity="center"
                android:padding="20dp"
                android:drawableStart="@drawable/baseline_payment_24"
                />
            <EditText
                android:id="@+id/textAmount1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:inputType="textPersonName"
                android:hint="Amount"
                android:gravity="center"
                android:padding="20dp"
                android:drawableStart="@drawable/baseline_attach_money_24"
                />



            <Button
                android:id="@+id/btnFindGuy"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/fuel_orange"
                android:fontFamily="sans-serif-black"
                android:padding="10dp"
                android:text="Find Guy"
                android:textColor="#1B1515"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>